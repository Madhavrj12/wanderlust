<% layout("/layouts/boilerplate") %>

<!-- Hero Section -->
<div class="hero-section text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to WonderLust</h1>
                <p class="lead mb-4">Your gateway to extraordinary stays around the world. Discover unique accommodations that turn your travel dreams into reality.</p>
                <div class="d-flex gap-3">
                    <a href="/listings" class="btn btn-light btn-lg px-4">Explore Listings</a>
                    <a href="/signup" class="btn btn-outline-light btn-lg px-4">Get Started</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1080&q=80" 
                     alt="Luxury Accommodation" 
                     class="img-fluid rounded-3 shadow-lg">
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <h2 class="text-center mb-5">Why Choose WonderLust?</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <i class="fas fa-home fa-3x mb-3 text-primary"></i>
                <h3>Unique Stays</h3>
                <p class="text-muted">From treehouses to beachfront villas, discover accommodations that make your stay unforgettable.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <i class="fas fa-shield-alt fa-3x mb-3 text-primary"></i>
                <h3>Secure Booking</h3>
                <p class="text-muted">Book with confidence using our secure payment system and verified property listings.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <i class="fas fa-globe fa-3x mb-3 text-primary"></i>
                <h3>Worldwide</h3>
                <p class="text-muted">Find your perfect stay in destinations across the globe, from urban centers to remote paradises.</p>
            </div>
        </div>
    </div>
</div>

<!-- Categories Section -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Explore by Category</h2>
        <div class="row g-4">
            <div class="col-6 col-md-3">
                <a href="/listings?category=mountain" class="text-decoration-none">
                    <div class="category-card text-center p-3">
                        <i class="fas fa-mountain fa-2x mb-2 text-primary"></i>
                        <h5>Mountain</h5>
                        <p class="text-muted small mb-0">Scenic mountain retreats</p>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/listings?category=beach" class="text-decoration-none">
                    <div class="category-card text-center p-3">
                        <i class="fas fa-umbrella-beach fa-2x mb-2 text-primary"></i>
                        <h5>Beach</h5>
                        <p class="text-muted small mb-0">Coastal getaways</p>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/listings?category=arctic" class="text-decoration-none">
                    <div class="category-card text-center p-3">
                        <i class="fas fa-snowflake fa-2x mb-2 text-primary"></i>
                        <h5>Arctic</h5>
                        <p class="text-muted small mb-0">Northern adventures</p>
                    </div>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/listings?category=desert" class="text-decoration-none">
                    <div class="category-card text-center p-3">
                        <i class="fas fa-sun fa-2x mb-2 text-primary"></i>
                        <h5>Desert</h5>
                        <p class="text-muted small mb-0">Desert oases</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- How It Works Section -->
<div class="container py-5">
    <h2 class="text-center mb-5">How It Works</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="step-card text-center p-4">
                <div class="step-number mb-3">1</div>
                <h4>Browse Listings</h4>
                <p class="text-muted">Explore our curated collection of unique accommodations worldwide.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="step-card text-center p-4">
                <div class="step-number mb-3">2</div>
                <h4>Book Your Stay</h4>
                <p class="text-muted">Select your dates and complete the booking process securely.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="step-card text-center p-4">
                <div class="step-number mb-3">3</div>
                <h4>Enjoy Your Stay</h4>
                <p class="text-muted">Arrive at your destination and create unforgettable memories.</p>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2 class="mb-4">Start Your Journey Today</h2>
            <p class="lead mb-4">Join thousands of travelers who have found their perfect stay with WonderLust.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/listings" class="btn btn-primary btn-lg px-5">Browse Listings</a>
                <a href="/signup" class="btn btn-outline-primary btn-lg px-5">Sign Up Now</a>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
                    url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1080&q=80');
        background-size: cover;
        background-position: center;
        min-height: 75vh;
        display: flex;
        align-items: center;
    }

    .min-vh-75 {
        min-height: 75vh;
    }

    .feature-card, .category-card, .step-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        height: 100%;
    }

    .feature-card:hover, .category-card:hover, .step-card:hover {
        transform: translateY(-5px);
    }

    .step-number {
        width: 40px;
        height: 40px;
        background: #fe424d;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin: 0 auto;
    }

    .category-card {
        padding: 1.5rem;
    }

    .category-card h5 {
        color: #333;
        margin: 0.5rem 0;
    }

    .btn-primary {
        background-color: #fe424d;
        border-color: #fe424d;
    }

    .btn-primary:hover {
        background-color: #e63a44;
        border-color: #e63a44;
    }

    .btn-outline-primary {
        color: #fe424d;
        border-color: #fe424d;
    }

    .btn-outline-primary:hover {
        background-color: #fe424d;
        color: white;
    }

    .text-primary {
        color: #fe424d !important;
    }

    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(254, 66, 77, 0.25);
    }

    .category-card:hover {
        border-color: #fe424d;
    }

    .feature-card i {
        color: #fe424d;
    }
</style> 